</style>


<body>
      <input type="checkbox" id="check" >
        <label for="check">
            <i class="fas fa-bars" id="btn"></i>
            <i class="fas fa-times" id="cancel"></i>
        </label>
        <div class="sidebar">

            <header> facebook</header>
            <ul>
                <li>Country <nav>@ViewBag.country</nav> </li>
                 
                <li>City  <nav>@ViewBag.city</nav></li>
                <li>Email <div class="mail">@ViewBag.email</div></li>
                <li>Mobile<nav >@ViewBag.mobile</nav></li>
            </ul>
        </div>
    




    <div class="white-header">

        <section class="profile-content">
            <header class="header-fb-design">
                <section class="cover-img-div">
                    <img src=@ViewBag.imagePpath />

                    <div class="profile-fb-img">
                        <img src=@ViewBag.imagePpath2 />
                        <h1> @ViewBag.getName </h1>
                    </div>
                </section>
                <nav class="navbar-design">
                    <ul>
                        <hr />
                        <li>Posta</li>
                        <li>About</li>
                        <li>Frinds</li>
                        <li>Photos</li>
                        <li>Videos</li>
                        <li>Check-ins</li>
