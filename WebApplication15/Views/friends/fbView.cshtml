    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $("#nourBtn").click(function (e) {
                e.preventDefault();
                var url = $(this).data("url");
                window.open(url, "_self");
            });
            $("#mayadaBtn").click(function (e) {
                e.preventDefault();
                var url = $(this).data("url");
                window.open(url, "_self");
            });

            $("#osamaBtn").click(function (e) {
                e.preventDefault();
                var url = $(this).data("url");
